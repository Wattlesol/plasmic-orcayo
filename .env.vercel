# Vercel Environment Configuration for Plasmic Monorepo

# IMPORTANT: Plasmic is a multi-service application that requires:
# 1. Frontend service (deployed to Vercel)
# 2. Backend service (must run separately on a traditional server)
# 3. Database (PostgreSQL)

# Frontend configuration
NEXT_PUBLIC_PUBLIC_URL="https://your-plasmic-frontend.vercel.app"
REACT_APP_PUBLIC_URL="https://your-plasmic-frontend.vercel.app"
PUBLIC_URL="https://your-plasmic-frontend.vercel.app"

# Backend API configuration (needs to be external to Vercel)
NEXT_PUBLIC_BACKEND_URL="https://your-plasmic-backend.com"
REACT_APP_BACKEND_URL="https://your-plasmic-backend.com"
BACKEND_URL="https://your-plasmic-backend.com"

# For local development
NEXT_PUBLIC_DEV_BACKEND_URL="http://localhost:3004"
REACT_APP_DEV_BACKEND_URL="http://localhost:3004"

# Database configuration (for backend service)
# Database must be hosted separately (e.g., AWS RDS, GCP Cloud SQL, etc.)
WAB_DBHOST="142.44.136.233"
WAB_DBUSER="wab"
WAB_DBNAME="plasmic-db"
WAB_DBPASSWORD="SEKRET"
WAB_DBPORT="5432"

# Frontend port (Vercel will handle this automatically)
PORT="3000"

# Node environment
NODE_ENV="production"

# Other Plasmic-specific environment variables
SITE_ASSETS_BUCKET="your-site-assets-bucket"
SITE_ASSETS_BASE_URL="https://your-assets-domain.com/"
AMPLITUDE_API_KEY=""
INTERCOM_APP_ID=""
POSTHOG_API_KEY=""
POSTHOG_HOST=""
POSTHOG_REVERSE_PROXY_HOST=""
SENTRY_DSN=""
SENTRY_ORG_ID=""
SENTRY_PROJECT_ID=""
STRIPE_PUBLISHABLE_KEY=""

# Development flags
DISABLE_BWRAP=1
NQ_SQLJS=1

# Plasmic-specific configurations
REACT_APP_DEFAULT_HOST_URL="https://your-plasmic-host.vercel.app/static/host.html"
CODEGEN_HOST="https://your-plasmic-frontend.vercel.app"

# For local development with all services
LOCAL_FRONTEND_URL="http://localhost:3003"
LOCAL_BACKEND_URL="http://localhost:3004"
LOCAL_HOST_URL="http://localhost:3005"